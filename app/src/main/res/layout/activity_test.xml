<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/head"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#bee1e2e6"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="@string/a"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/optionAtest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dp"
            android:text="@string/option_a"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="@string/b"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/optionBtest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dp"
            android:text="@string/option_b"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="@string/c"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/optionCtest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="3dp"
            android:text="@string/option_c"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<!--

        <Button
            android:id="@+id/wiki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:background="@android:color/holo_red_dark"
            android:text="@string/advance"
            android:textColor="@android:color/background_light"/>

        <Button
            android:id="@+id/getanswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="1dp"
            android:layout_weight="1"
            android:background="@android:color/holo_green_light"
            android:padding="3dp"
            android:text="@string/simple"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="16sp"/>
-->


        <ai.myfancy.button.iml.ActionProcessButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wiki1"
            android:textColor="@android:color/background_light"
            android:text="@string/advance"
            android:layout_weight="1"
            android:layout_marginEnd="2dp"

            app:pb_colorNormal="@android:color/holo_red_dark"
            app:pb_textComplete="@string/advance"
            app:pb_textProgress="Finding.."
            app:pb_textError="Error"
            android:textSize="16sp"
            app:pb_colorPressed="@android:color/holo_blue_light"
            />


        <ai.myfancy.button.iml.ActionProcessButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:id="@+id/getanswer1"
            android:text="@string/simple"
            android:textSize="16sp"
            android:textColor="@android:color/background_light"
            android:layout_weight="1"
            android:padding="3dp"
            android:textAlignment="center"
            app:pb_colorNormal="@android:color/holo_green_light"
            app:pb_textComplete="@string/simple"
            app:pb_textProgress="Finding.."
            app:pb_colorProgress="@android:color/holo_green_dark"
            app:pb_textError="Error"
            app:pb_colorPressed="@android:color/holo_blue_light"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/q_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_question"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/a_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/option_a"
                tools:ignore="HardcodedText"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/b_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/option_b"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/c_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/option_c"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>


</LinearLayout>